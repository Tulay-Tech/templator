{
  "name": "mini-apps",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/node": "^22.13.14",
      "@cloudflare/workers-types": "^4.20251213.0",
      "better-auth": "^1.4.9",
      "alchemy": "^0.82.1",
      "@libsql/client": "0.15.15",
      "libsql": "0.5.22"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @mini-apps/db db:push",
    "db:studio": "turbo -F @mini-apps/db db:studio",
    "db:generate": "turbo -F @mini-apps/db db:generate",
    "db:migrate": "turbo -F @mini-apps/db db:migrate",
    "db:local": "turbo -F @mini-apps/db db:local",
    "auth:generate": "bunx @better-auth/cli generate --config ./packages/auth/src/cli-config.ts --output ./packages/db/src/schema/auth.ts --yes"
  },
  "dependencies": {
    "@mini-apps/env": "workspace:*",
    "dotenv": "^17.2.3",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "catalog:",
    "@mini-apps/config": "workspace:*",
    "@types/node": "catalog:",
    "turbo": "^2.6.3",
    "typescript": "catalog:"
  },
  "packageManager": "bun@1.3.5"
}
